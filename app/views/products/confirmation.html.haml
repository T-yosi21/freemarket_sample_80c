.Main
  .Header
    %a(href="#")
      = image_tag 'material/logo/logo.png'
  .Product_Show
    .Product_Show--list
      %section.Product_Show_list--title.BB
        %h2.Product_Show_List_title--name 
          購入内容の確認
      %section.Product_Show_list-form.BB
        .Product_Show_List_form-name
          .Product_Show--image
            %figure
              %img(src="https://o.imgz.jp/fashionnews/109222/master_640_1.jpg" alt="商品画像一枚" srcset="")/
          .Product_Show_text
            %p.Product_Show_text--title
              ここに商品名が入る
            %p.Product_Show_text--area
              %span.Product_Show--shipping
                送料込み(税込み)
              %span.Product_Show--price
                ¥1,000
      %section.Product_Show_list-price.BB
        .Product_Show_price--list
          %span.price_text
            支払い金額 
          %spam.price_area
            ¥1,100
      %section.Product_Show_list-method.BB
        .Product_Show--method
          .Product_Show--method--list
            %h3.method--name
              支払い方法
            = link_to "変更する","#", class: "method--Change" 
          .Product_Show_method--text
            %p クレジットカード支払い
            %p 手数料¥100
      %section.Product_Show_List--address.BB
        .Product_Show_List_Address--list
          .Product_Show_List_Address_list--name
            %h3.h3 配送先
          = link_to "登録してください","#" , class: "address--name"
      %section.Product_Show_list--button.BB
        .Product_Show_List_button--list
          %button.btn(type="button") 購入する

  .Footer
    .Footer--list
      %ul.uu
        %li.ii
          = link_to "プライバシーポリシー", "#"
        %li.ii
          = link_to "メルカリ使用規約","#"
        %li.ii
          = link_to "特定商取引に関する表記","#"
    %a(href="#")
      = image_tag 'material/logo/logo-white.png'
    %p © Mercari, Inc.